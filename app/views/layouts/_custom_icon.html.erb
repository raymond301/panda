<!-- Filter Modal -->
<div class="modal fade" id="iconModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Upload your Own Image</h4>
                Upload an Image to be used as an icon for your next annotation.
            </div>
        <%= form_tag({:controller => 'dashboard', :action => 'create_icon'}, {:multipart => true, :role => 'form'}) do %>
                <div class="modal-body">
                    <div class="row">
                        <label for="#annotation_collection_id" class="col-xs-2">Image:</label>
                        <div class="col-xs-10">
                            <%= file_field_tag 'file', :class => 'form-control'%>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <%= submit_tag "Upload", :class => 'btn btn-info' %>
                </div>
            <% end %>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div><!-- /.modal -->
<br>
