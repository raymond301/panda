<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa fa-sign-in"></span>Please Login</h1>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-signin") do |f| %>
            <div class="control-group"><%= f.label :username %><br/>
                <%= f.text_field :username, :autofocus => true, :class => "form-control" %></div>

            <div class="control-group"><%= f.label :password %><br/>
                <%= f.password_field :password, :class => "form-control" %></div>

            <% if devise_mapping.rememberable? -%>
                <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
            <% end -%>
            </br>
            <div><%= f.submit "Sign in", :class => "btn btn-lg btn-primary btn-block" %></div>
        <% end %>

        </form>
        <p><%= render "devise/shared/links" %></p>
    </div>
</div>











